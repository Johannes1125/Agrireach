# Runtime
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database
MONGODB_URI=

# JWT (generate long random strings)
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_DAYS=7

# Auth cookies (for hosting with cookies)
ACCESS_TOKEN_COOKIE=agrireach_at
REFRESH_TOKEN_COOKIE=agrireach_rt
COOKIE_DOMAIN=
COOKIE_SECURE=false

# SMTP (Gmail - use an App Password, not your account password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="AgriReach <no-reply@yourdomain.com>"

# File storage (free-tier friendly)
# Cloudinary one-line URL (free tier available) or leave empty to use local storage later
CLOUDINARY_URL=
LOCAL_UPLOAD_DIR=.uploads

# Payments (Stripe test keys are free)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayMongo (Philippines payment gateway)
PAYMONGO_SECRET_KEY=
PAYMONGO_PUBLIC_KEY=
PAYMONGO_WEBHOOK_SECRET=

# Maps (free options)
# OpenStreetMap tiles and Nominatim for geocoding (respect rate limits)
MAP_TILES_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Realtime / Push (free tiers)
# Firebase Cloud Messaging server key (optional)
FIREBASE_SERVER_KEY=

# Monitoring (free tier available)
SENTRY_DSN=

# Search (free/self-hosted options)
# If empty, fallback to MongoDB text indexes
MEILISEARCH_HOST=
MEILISEARCH_API_KEY=
